{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "taggy",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "dialog": {
        "all": true, 
        "ask": true, 
        "confirm": true, 
        "message": true, 
        "open": true, 
        "save": true 
      },
    "fs":{
      "readDir": true,
      "scope": [
					"$APP",
					"$APP/**",
					"$DESKTOP",
					"$DESKTOP/**",
					"$RESOURCE",
					"$RESOURCE/**",
					"$APPCONFIG",
					"$APPCONFIG/**",
					"$DATA",
					"$DATA/**",
					"$APPLOG",
					"$APPLOG/**",
					"$APPCACHE",
					"$APPCACHE/**"
				]
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.taggy.cyanism",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "taggy",
        "width": 800,
        "height": 600
      }
    ]
  }
}
