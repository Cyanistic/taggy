{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "taggy",
  "version": "0.1.0",
  "identifier": "com.taggy.cyanism",
  "build": {
    "beforeDevCommand": "if command -v pnpm; then pnpm dev; else npm run dev; fi",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "if command -v pnpm; then pnpm build; else npm run build; fi",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "taggy",
        "width": 800,
        "height": 600,
        "decorations": false,
        "resizable": true
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self' ipc: http://ipc.localhost asset: http://asset.localhost",
        "img-src": "'self' asset: http://asset.localhost blob: data:",
        "media-src": "'self' asset: http://asset.localhost blob:"
      },
      "assetProtocol": {
        "enable": true,
        "scope": ["*/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/taggy128x128.png",
      "icons/taggy128x128@2x.png",
      "icons/favicon.ico"
    ],
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  }
}
